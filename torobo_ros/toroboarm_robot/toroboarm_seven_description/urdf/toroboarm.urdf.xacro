<?xml version="1.0"?>
<robot name="toroboarm" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- =============== Load Dependencies =============== -->
  <xacro:include filename="$(find toroboarm_seven_description)/urdf/toroboarm.gazebo"/>
  <xacro:include filename="$(find toroboarm_seven_description)/urdf/toroboarm.transmission.xacro"/>

  <!-- =============== Constants =============== -->
  <xacro:property name="M_PI" value="3.1415926535897931"/>

  <!-- =============== Link & Joint =============== -->
  <!-- <link name="base_link"/> -->
  <link name="world"/>

  <joint name="joint_base" type="fixed">
    <origin xyz="0 0 0.3"/>
    <parent link="world"/>
    <child link="base"/>
  </joint>

  <link name="base">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.1"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.6" radius="0.1" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.3"/>
      <mass value="1"/>
      <inertia
        ixx="1" ixy="0" ixz="0"
        iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <joint name="root" type="fixed">
    <origin xyz="0 0 0.3"/>
    <parent link="base"/>
    <child link="link0"/>
  </joint>

  <link name="link0">
    <visual>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link0_fixed_axis.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link0_fixed_axis.dae"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="-0.00019782 -0.00010435 -0.08200349"/>
      <mass value="0.000556532349"/>
      <inertia
        ixx="7.106386719e-7" ixy="-6.3071289e-9" ixz="-9.664139e-10"
        iyy="7.291706055e-7" iyz="-5.514604e-10" izz="12.989606445e-7"/>
    </inertial>
  </link>

  <joint name="first_joint" type="revolute">
    <parent link="link0"/>
    <child link="link1"/>
    <origin xyz="0 0 0.24" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-160*M_PI/180}" upper="${160*M_PI/180}" effort="60" velocity="${120*M_PI/180}"/>
  </joint>

  <link name="link1">
    <visual>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link1_fixed_axis.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link1_fixed_axis.dae"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.00000099 0.00586043 0.01069862"/>
      <mass value="0.001533939453"/>
      <inertia
        ixx="3.9528210938e-6" ixy="0.339023e-10" ixz="0.093167e-10"
        iyy="3.7084527344e-6" iyz="9.61685913e-8" izz="2.6426470703e-6"/>
    </inertial>
  </link>

  <joint name="second_joint" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0" rpy="${-90*M_PI/180} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-45*M_PI/180}" upper="${105*M_PI/180}" effort="60" velocity="${120*M_PI/180}"/>
  </joint>

  <link name="link2">
    <visual>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link2_fixed_axis.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link2_fixed_axis.dae"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.13867682 -0.00000003 0.13671244"/>
      <mass value="0.004087348145"/>
      <inertia
        ixx="8.6736679688e-6" ixy="-0.327858e-10" ixz="1.3874011719e-6"
        iyy="7.27795437500e-5" iyz="0.189328e-10" izz="6.95757250000e-5"/>
    </inertial>
  </link>

  <joint name="third_joint" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 -0.31 0" rpy="${90*M_PI/180} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-160*M_PI/180}" upper="${160*M_PI/180}" effort="25" velocity="${180*M_PI/180}"/>
  </joint>

  <link name="link3">
    <visual>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link3_fixed_axis.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link3_fixed_axis.dae"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.00000013 -0.00239773 0.00513731"/>
      <mass value="0.001273232422"/>
      <inertia
        ixx="3.0814207031e-6" ixy="0.061746e-10" ixz="-0.024647e-10"
        iyy="1.8144869141e-6" iyz="-1.56862595e-8" izz="2.9111501953e-6"/>
    </inertial>
  </link>

  <joint name="fourth_joint" type="revolute">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="0 0 0" rpy="${-90*M_PI/180} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-45*M_PI/180}" upper="${105*M_PI/180}" effort="25" velocity="${180*M_PI/180}"/>
  </joint>

  <link name="link4">
    <visual>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link4_fixed_axis.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link4_fixed_axis.dae"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.00000001 0.00524430 -0.15712837"/>
      <mass value="0.001405229736"/>
      <inertia
        ixx="1.02374218750e-5" ixy="-0.002806e-10" ixz="-0.018743e-10"
        iyy="9.9758851562e-6" iyz="-1.0365675781e-6" izz="1.4955408203e-6"/>
    </inertial>
  </link>

  <joint name="fifth_joint" type="revolute">
    <parent link="link4"/>
    <child link="link5"/>
    <origin xyz="0 -0.31 0" rpy="${90*M_PI/180} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-160*M_PI/180}" upper="${160*M_PI/180}" effort="11" velocity="${180*M_PI/180}"/>
  </joint>

  <link name="link5">
    <visual>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link5_fixed_axis.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link5_fixed_axis.dae"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="-0.00000244 0.02272250 0.00573858"/>
      <mass value="0.000692780090"/>
      <inertia
        ixx="1.4276805664e-6" ixy="0.752651e-10" ixz="-0.177501e-10"
        iyy="7.018117676e-7" iyz="9.03329285e-8" izz="1.1866076172e-6"/>
    </inertial>
  </link>

  <joint name="sixth_joint" type="revolute">
    <parent link="link5"/>
    <child link="link6"/>
    <origin xyz="0 0 0" rpy="${-90*M_PI/180} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-90*M_PI/180}" upper="${90*M_PI/180}" effort="11" velocity="${180*M_PI/180}"/>
  </joint>

  <link name="link6">
    <visual>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link6_fixed_axis.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link6_fixed_axis.dae"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="-0.00000000 -0.00000000 -0.11276073"/>
      <mass value="0.000032368717"/>
      <inertia
        ixx="7.8369209e-9" ixy="-0.000000e-10" ixz="0.000011e-10"
        iyy="7.8369209e-9" iyz="0.000012e-10" izz="1.49440048e-8"/>
    </inertial>
  </link>

  <joint name="seventh_joint" type="revolute">
    <parent link="link6"/>
    <child link="link7"/>
    <origin xyz="0 -0.175 0" rpy="${90*M_PI/180} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-160*M_PI/180}" upper="${160*M_PI/180}" effort="5" velocity="${180*M_PI/180}"/>
  </joint>
  
  <link name="link7">
    <visual>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link7_fixed_axis.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://toroboarm_seven_description/meshes/link7_fixed_axis.dae"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="-0.00000000 -0.00000000 -0.11276073"/>
      <mass value="0.000032368717"/>
      <inertia
        ixx="7.8369209e-9" ixy="-0.000000e-10" ixz="0.000011e-10"
        iyy="7.8369209e-9" iyz="0.000012e-10" izz="1.49440048e-8"/>
    </inertial>
  </link>
  
  <!-- =============== Transmission =============== -->
  <arm_simple_transmission name="first" reduction="1"/>
  <arm_simple_transmission name="second" reduction="1"/>
  <arm_simple_transmission name="third" reduction="1"/>
  <arm_simple_transmission name="fourth" reduction="1"/>
  <arm_simple_transmission name="fifth" reduction="1"/>
  <arm_simple_transmission name="sixth" reduction="1"/>
  <arm_simple_transmission name="seventh" reduction="1"/>

</robot>
